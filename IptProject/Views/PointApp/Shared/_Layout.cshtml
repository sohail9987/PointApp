<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #175d98;">
        <div class="container">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Point Management Sytem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav" style="color : aliceblue">
                    <li>@Html.ActionLink("Drivers", "Index", "Driver")</li>
                    <li>@Html.ActionLink("Routes", "Index", "Route")</li>
                    <li>@Html.ActionLink("Points", "Index", "Point")</li>
                    <li>@Html.ActionLink("Semester", "Index", "Semester")</li>
                    <li>@Html.ActionLink("Students", "Index", "StudentPoint")</li>
                    <li>@Html.ActionLink("Fee", "Index", "PointFee")</li>
                    <li>@Html.ActionLink("Payment", "Index", "PointPayment")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; FAST NUCES Karachi - Point Management Sytem</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
